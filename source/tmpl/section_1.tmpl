<div class="section" id="section--one">

    <div class="bbc-news-vj-grid-wrapper">
        <div class="bbc-news-vj-grid-wrapper__fluid-inner">
            <h2><%= section_1_title %></h2>
        </div>
    </div>
    <div class="bbc-news-vj-video__wrapper">
        <div class="bbc-news-vj-video" id="bbc-news-vj-video--one">
            <div class="bbc-news-vj-video__player"></div>
            <div class="bbc-news-vj-video__overlay">
                <button class="bbc-news-vj-video__overlay__play" aria-label="Play"></button>
                <div class="bbc-news-vj-video__overlay__text">
                    <div class="bbc-news-vj-video__overlay__text__title"><%= section_1_video_title %></div>
                    <div class="bbc-news-vj-video__overlay__text__summary"><%= section_1_video_summary %></div>
                </div>
            </div>
        </div>
    </div>

    <div class="bbc-news-vj-grid-wrapper">
        <div class="bbc-news-vj-grid-wrapper__fluid-inner">
            <p><%= section_1_paragraph %></p>
            <!-- <blockquote class="bbcquote">
                <%= section_1_blockquote %>
                <cite class="bbcquote__cite"><%= section_1_blockquote_credit %></cite>
            </blockquote> -->
            <div class="bbc-news-vj-sharetools" id="bbc-news-vj-sharetools--1" data-message="<%= section_1_share_message %>" data-url="<%= short_url %>"></div>
        </div>
    </div>

</div>
